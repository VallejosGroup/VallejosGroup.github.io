---
export interface Props {
  software: {
    name: string;
    description: string;
    category?: string;
    language?: string;
    img?: string;
    website?: string;
    github?: string;
    documentation?: string;
    paper?: string;
    bioconductor?: string;
    cran?: string;
    pypi?: string;
  };
}

const { software } = Astro.props;
---

<figure class="md:flex rounded-xl p-8 md:p-0 my-8 drop-shadow-2xl  bg-slate-50 dark:bg-slate-800" style = "display: flex ;justify-content: center; align-items: center;">
  {software.img && (
    <picture style = "padding-left: 30px;">
      <source srcset={`/${software.img}.webp`} type="image/webp">
      <source srcset={`/${software.img}.png`} type="image/png"> 
      <img 
        class="size-40 md:size-60 md:h-auto rounded-xl mx-auto object-contain" 
        src={`/${software.img}.png`} 
        alt={software.name} 
        width="384" 
        height="512"
      >
    </picture>
  )}

  <div class="pt-6 md:p-8 flex-wrap text-center md:text-left flex-1 flex flex-col justify-center gap-4">
    <div class="space-y-2">
      <h2 class="text-2xl grow font-extralight">{software.name}</h2> 
      <p class="text-lg font-thin">
        {software.description}
      </p>
      {software.category && (
        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">
          Category: {software.category}
        </p>
      )}
      {software.language && (
        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">
          Language: {software.language}
        </p>
      )}
    </div>
   
    <div class="flex gap-4 justify-center md:justify-start flex-wrap">
      {software.website && (
        <a href={software.website} title="Website" class="hover:text-blue-600 dark:hover:text-blue-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="size-9" fill="none" viewBox="0 1 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
          </svg>
        </a>
      )}
      
      {software.github && (
        <a href={software.github} title="GitHub" class="hover:text-blue-600 dark:hover:text-blue-400">
          <svg class="size-9 fill-current" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 110 110">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M48.854 0C21.839 0 0 22 0 49.217c0 21.756 13.993 40.172 33.405 46.69 2.427.49 3.316-1.059 3.316-2.362 0-1.141-.08-5.052-.08-9.127-13.59 2.934-16.42-5.867-16.42-5.867-2.184-5.704-5.42-7.17-5.42-7.17-4.448-3.015.324-3.015.324-3.015 4.934.326 7.523 5.052 7.523 5.052 4.367 7.496 11.404 5.378 14.235 4.074.404-3.178 1.699-5.378 3.074-6.6-10.839-1.141-22.243-5.378-22.243-24.283 0-5.378 1.94-9.778 5.014-13.2-.485-1.222-2.184-6.275.486-13.038 0 0 4.125-1.304 13.426 5.052a46.97 46.97 0 0 1 12.214-1.63c4.125 0 8.33.571 12.213 1.63 9.302-6.356 13.427-5.052 13.427-5.052 2.67 6.763.97 11.816.485 13.038 3.155 3.422 5.015 7.822 5.015 13.2 0 18.905-11.404 23.06-22.324 24.283 1.78 1.548 3.316 4.481 3.316 9.126 0 6.6-.08 11.897-.08 13.526 0 1.304.89 2.853 3.316 2.364 19.412-6.52 33.405-24.935 33.405-46.691C97.707 22 75.788 0 48.854 0z"/>
          </svg>
        </a>
      )}
      
      {software.documentation && (
        <a href={software.documentation} title="Documentation" class="hover:text-blue-600 dark:hover:text-blue-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="size-9" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </a>
      )}
      
      {software.paper && (
        <a href={software.paper} title="Paper" class="hover:text-blue-600 dark:hover:text-blue-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="size-9" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
          </svg>
        </a>
      )}
      
      {software.bioconductor && (
        <a href={software.bioconductor} title="Bioconductor" class="hover:text-blue-600 dark:hover:text-blue-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="size-9" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M9 1.334l.05-.026A2 2 0 0110.356.868L8.5 2.5 9 1.334zm3.75 5.823L15 6l-3.25 1.157c-.83.295-1.296.95-1.296 1.654 0 .703.466 1.359 1.296 1.654L15 11.5l-3.25 1.157" />
          </svg>
        </a>
      )}
      
      {software.cran && (
        <a href={software.cran} title="CRAN" class="hover:text-blue-600 dark:hover:text-blue-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="size-9" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h4a2 2 0 002-2V9a2 2 0 00-2-2H7a2 2 0 00-2 2v6a2 2 0 002 2z" />
          </svg>
        </a>
      )}
      
      {software.pypi && (
        <a href={software.pypi} title="PyPI" class="hover:text-blue-600 dark:hover:text-blue-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="size-9" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
          </svg>
        </a>
      )}
    </div>
  </div>
</figure>
