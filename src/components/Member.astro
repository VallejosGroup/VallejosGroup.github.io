---
export interface Props {
  member: {
    name: string;
    role: string;
    img?: string;
    website?: string;
    github?: string;
    twitter?: string;
    bluesky?: string;
    scholar?: string;
    blog?: string;
    linkedin?: string;
  };
}

const { member } = Astro.props;
---

<figure class="md:flex rounded-xl p-8 md:p-0 my-8 drop-shadow-2xl bg-slate-50">
  {member.img && (
    <picture>
      <source srcset={`/${member.img}-480.webp`} type="image/webp">
      <source srcset={`/${member.img}.jpg`} type="image/jpeg"> 
      <img 
        class="w-40 md:size-60 md:h-auto rounded-xl mx-auto" 
        src={`/${member.img}.jpg`} 
        alt={member.name} 
        width="384" 
        height="512"
      >
    </picture>
  )}

  <div class="pt-6 md:p-8 flex-wrap text-center md:text-left flex-1 flex flex-col justify-center gap-4">
    <div class="space-y-0">
      <h2 class="text-2xl grow font-extralight">{member.name}</h2> 
      <p class="text-2xl font-thin">
        {member.role}
      </p>
    </div>
   
    <div class="flex gap-4 justify-center md:justify-start">
      {member.website && (
        <a href={member.website} title="Website">
          <svg xmlns="http://www.w3.org/2000/svg" class="size-9" fill="none" viewBox="0 1 24 24">
          <title>Personal website</title>
