---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const alumni = await getCollection("alumni");
// Sort by importance (lower numbers first), then by name
const sortedAlumni = alumni.sort((a, b) => {
  const importanceA = a.data.importance ?? 999;
  const importanceB = b.data.importance ?? 999;
  if (importanceA !== importanceB) {
    return importanceA - importanceB;
  }
  return a.data.name.localeCompare(b.data.name);
});
---

<Layout title="Alumni - Vallejos Group">
  <div class="alumni">
    <h1 class="page-title">Alumni</h1>

    <div class="alumni-grid">
      {
        sortedAlumni.map((alumnus) => (
          <div class="alumni-card">
            {alumnus.data.img && (
              <div class="alumni-image">
                <img src={`/${alumnus.data.img}-480.webp`} alt={alumnus.data.name} />
              </div>
            )}
            <h3>{alumnus.data.name}</h3>
            <p class="role">{alumnus.data.role}</p>
            {alumnus.data.years && <p class="years">{alumnus.data.years}</p>}
            {alumnus.data.after && (
              <p class="current">After: {alumnus.data.after}</p>
            )}

            <div class="alumni-links">
              {alumnus.data.website && (
                <a
                  href={alumnus.data.website}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  Website
                </a>
              )}
              {alumnus.data.github && (
                <a
                  href={alumnus.data.github}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  GitHub
                </a>
              )}
              {alumnus.data.scholar && (
                <a
                  href={alumnus.data.scholar}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  Scholar
                </a>
              )}
              {alumnus.data.twitter && (
                <a
                  href={alumnus.data.twitter}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  Twitter
                </a>
              )}
              {alumnus.data.blog && (
                <a
                  href={alumnus.data.blog}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  Blog
                </a>
              )}
              {alumnus.data.linkedin && (
                <a
                  href={alumnus.data.linkedin}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  LinkedIn
                </a>
              )}
            </div>
          </div>
        ))
      }
    </div>

    <p class="mt-8 text-center">
      <a href="/members">‚Üê Back to current members</a>
    </p>
  </div>
</Layout>

<style>
  .alumni {
    max-width: 1200px;
    margin: 0 auto;
  }

  .alumni-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }


  .alumni-card {
    padding: 2rem;
    border: 1px solid #e5e7eb;
    border-radius: 0.75rem;
    text-align: center;
    background: white;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.15s ease-in-out;
  }



  
  .alumni-card:hover {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .alumni-image {
    width: 120px;
    height: 120px;
    margin: 0 auto 1.5rem;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid #f3f4f6;
  }

  .alumni-image img {
    width: 100%;
    object-fit: cover;
  }

  .alumni-card h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 0.5rem;
  }

  .role {
    font-weight: 500;

    margin-bottom: 0.5rem;
  }

  .years {
    font-size: 0.9rem;
    color: #6b7280;
    margin-bottom: 1rem;
  }

  .current {
    font-style: italic;
    color: #374151;
    font-size: 0.95rem;
    line-height: 1.5;
    margin-bottom: 1.5rem;
  }

  .alumni-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
  }

  .alumni-links a {
    display: inline-block;
    padding: 0.375rem 0.75rem;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    border: 1px solid #6b7280;
    border-radius: 0.375rem;
    transition: all 0.15s ease-in-out;
  }

  .alumni-links a:hover {
    background-color: #374151;
    color: white;
  }

  .text-center {
    text-align: center;
  }

  .mt-8 {
    margin-top: 2rem;
  }

  .text-center a {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    font-weight: 500;
    color: #6b7280;
    text-decoration: none;
    border: 1px solid #d1d5db;
    border-radius: 0.5rem;
    transition: all 0.15s ease-in-out;
  }

  .text-center a:hover {
    background-color: #f9fafb;
    border-color: #9ca3af;
  }

  :global([data-theme="dark"]) .alumni-card {
    background: #323c51 !important;
    border-color: #4a5568;
  }

  :global([data-theme="dark"]) .alumni-card h3 {
    color: #e2e8f0 !important;
  }

  :global([data-theme="dark"]) .alumni-image {
    border-color: #4a5568;
  }

  :global([data-theme="dark"]) .years {
    color: #a0aec0;
  }

  :global([data-theme="dark"]) .current {
    color: #cbd5e0;
  }

  :global([data-theme="dark"]) .text-center a:hover {
    background-color: #323c51;
    border-color: #6b7280;
  }
</style>
