---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 Not Found - Vallejos Group">
  <div class="container mt-5 text-center">
    <h1 class="page-title text-6xl font-bold text-gray-800 dark:text-gray-200">
      404
    </h1>
    <p class="mt-4 text-xl text-gray-600 dark:text-gray-400">Page Not Found</p>
    <p class="mt-2 text-lg text-gray-600 dark:text-gray-400">
      The page you are looking for might have been removed, had its name
      changed, or is temporarily unavailable.
    </p>
    <a
      href="/"
      class="mt-6 inline-block rounded-lg px-4 py-2 font-bold transition duration-300"
    >
      Go to Homepage
    </a>
  </div>
</Layout>
